<div class="cart-drawer" data-moneyformat="{{ shop.money_format }}">
    <div class="cart-drawer__header">
        <h4 class="cart-drawer-label"><a href="/cart" class="js-close-cart">Cart</a>: <span class="js-cart-count">{{ cart.item_count }}</span></h4>
        <button class="cart-drawer-close-btn js-close-cart">Close</button>
    </div>
    <div class="cart-drawer__body {% if cart.empty? %} empty {% endif %}">
        {% if cart.empty? %}
            <h4 class="cart-drawer-label empty-cart-label">Your cart is empty</h4>
        {% else %}
            {% for item in cart.items %}
                
                <div class="cart-drawer-item js-cart-item" data-product-id="{{ item.id }}" data-key="{{ item.key }}">    
                    <div class="cart-drawer-item-img">
                        <a href="{{ item.url }}">
                            <img src="{{ item.image | image_url: width: 75}}" 
                                 alt="{{ item.image.alt | escape }}" 
                                 loading="lazy" 
                                 width="{{ item.image.width }}" 
                                 height="{{ item.image.height }}" />
                        </a>
                    </div>

                    <div class="cart-drawer-item-info">
                        <h4 class="cart-drawer-item-title">
                            <a href="{{ item.url }}">{{ item.product.title | upcase }} x<span class="js-cart-item-quantity">{{ item.quantity }}</span></a>
                        </h4>
                        <p class="cart-drawer-item-price js-cart-item-price">{{ item.final_line_price | money }}</p> 
                        {% if item.options_with_values %}
                            <p class="cart-variant-label"> | </p>
                            {% for variant in item.options_with_values %}
                                <p class="cart-variant-label">{{ variant.name}}: {{variant.value}}</p>
                            {% endfor %}
                        {% endif %}
                    </div>
                    
                    <div class="cart-drawer-item-remove">
                        <a href="#" class="cart-remove-btn js-remove-cart-item" data-key="{{ item.key }}">Ã—</a>
                    </div>
                </div>
            {% endfor %}

        {% endif %}
    </div>
    <div class="cart-drawer__footer {% if cart.empty? %}hidden{% endif %}">
        <p class="cart-drawer-label cart-drawer-subtotal">Subtotal: <span class="js-cart-total">{{ cart.total_price | money }}</span></p>
        <div class="cart-drawer-checkout">
            {% form 'cart', cart %} 
                <button type="submit" name="checkout" data-barba-prevent="self" class="js-checkout btn">Checkout</button>
            {% endform %}
        </div>
        
        <a href="/cart/" class="cart-link js-close-cart">View Cart</a>
    </div>
</div>