    e.preventDefault();

    closeCartDrawer();

    this.classList.toggle('active');
    body.classList.toggle('fixed');

    if (this.classList.contains('active')) {
      gsap.to(nav, {autoAlpha: 1, duration: 0.5});
    } else {
