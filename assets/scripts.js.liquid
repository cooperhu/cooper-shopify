function initNavigation() {
  // Enable sticky nav
  if (document.querySelector('.site-header').classList.contains('is-sticky')) {
    ScrollTrigger.create({
      trigger: ".site-header",
      pin: ".site-header",
      start: "top",
      end: 99999,
      // markers: true,
    });
  }
}

function initCartDrawer() {
  // Opens Cart
  $('.js-open-cart').on('click', function(e) {
    e.preventDefault();
    gsap.to('.cart-drawer', 0.35, {autoAlpha: 1, opacity: 1});
  });

  // Closes Cart
  $('.js-close-cart').on('click', function(e) {
    e.preventDefault();
    gsap.to('.cart-drawer', 0.35, {autoAlpha: 0, opacity: 0});
  });

  // Removes item from cart drawer list (WIP)
  $('.js-remove-cart-drawer-item').on('click', function(e) {
    $(this).parent().remove();
  });
}

