    top: 0.55rem;
    right: 1rem;

    z-index: 2000;

    display: flex;
    flex-direction: column;

    visibility: hidden;
    opacity: 0;

    width: 100%;
    max-width: calc(100% - 2rem);

    max-height: calc(100vh - 1.1rem);
    max-height: calc(100svh - 1.1rem);

    background: var(--site-bg);

    border: 1px solid var(--border-color);
