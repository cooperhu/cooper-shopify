:root {
    --padding-side-sm: 1.5rem;
    --padding-side-md: 2.5rem;

    --black: #191919;
    --white: #ffffff;
    --red: #c41e3a;

    --site-bg: {{ settings.site_bg_color }};
    --site-text: {{ settings.site_text_color }};

    --banner-bg: {{ settings.banner_bg_color }};
    --banner-text: {{ settings.banner_text_color }};

    --border-color: {{ settings.site_text_color }};
}

/* Sets init fade in */
html.js main {
    opacity: 1;
    transition: opacity 0.69s cubic-bezier(0.49, 0.07, 0.38, 0.93);
    transition-delay: 0.26s;
}

/* **************************
 * Base 
 * ************************** */
* {
    box-sizing: border-box;
}

html,
body {
    margin: 0;
    min-height: 100%;
}

body {
    position: relative;

    font-family: Helvetica, "Helvetica Neue", Arial, sans-serif;

    /* Sets .site-main to fill available space at minimum. Can be removed. */
    display: flex;
    flex-direction: column;

    min-height: 100vh;
    min-height: 100svh;

    color: var(--site-text);
    background: var(--site-bg);

    overflow-x: hidden;

    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;

}

body.fixed {
    overflow: hidden;
}


img {
  max-width: 100%;
  height: auto;
}

/* hides lazyload alt text */
img {
  color: transparent;
}

@supports (font: -apple-system-body) and (-webkit-appearance: none) {
  img[loading="lazy"] {
    clip-path: inset(0.6px)
  }
}

.hidden {
    display: none;
}
/* **************************
 * Typography 
 * ************************** */
a {
    color: var(--site-text);
    text-decoration: none;
}

a:hover {
    text-decoration: underline;
}

textarea {
    font-family: 'Helvetica', sans-serif;
}

.loading-screen {
    position: fixed;
    top: 0;
    left: 0;

    z-index: 800;

    width: 100%;
    height: 100vh;
    height: 100svh;

    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;

    padding: 1rem;

    background: var(--site-bg);

    opacity: 0;
    visibility: hidden;
}


.loading-screen-icon {
    display: block;

    max-width: 50px;
    width: 100%;
}

/* **************************
 * Header 
 * ************************** */
.sitewide-banner {
    position: relative;
    z-index: 1500;

    padding: 0.35rem var(--padding-side-sm);

    text-align: center;
    color: var(--banner-text);
    background: var(--banner-bg);
    border-bottom: 1px solid var(--border-color);
}

.sitewide-banner a {
    color: var(--banner-text);
}

.site-header {
    position: relative;
    z-index: 1000;

    width: 100%;

    padding: 0.5rem var(--padding-side-sm);

    background: var(--site-bg);

    border-bottom: 1px solid var(--border-color);
}

@media screen and (min-width: 700px) {
    .site-header{
        padding: 0.75rem var(--padding-side-md);
    }
}

.site-title {
    margin: 0;
}

/* Nav ********************* */
.nav-button {
  position: absolute;
  top: 14px;
  left: var(--padding-side-sm);
  z-index: 10000;

  display: block;

  width: 30px;
  /* height: 32px; */
  padding: 1rem 0;

  appearance: none;
  border: none;
  background: transparent;

  cursor: pointer;
}

@media screen and (min-width: 700px) {
    .nav-button {
      left: var(--padding-side-md);
    }
}

@media screen and (min-width: 1000px) {
    .nav-button {
        display: none;
    }
}

.nav-button span {
    position: absolute;
    left: 0;
    width: 100%;
    height: 1px;

    background: #000;
    opacity: 1;

    transform: translateY(-50%);
    transform-origin: center center;

    transition: top 250ms ease-out, opacity 150ms ease, transform 250ms ease-out, background 250ms ease-out;
}

.nav-button span:first-child { top: 25%;    }

.nav-button span:nth-child(3n) { opacity: 0; }

.nav-button span:nth-child(2n),
.nav-button span:nth-child(3n) { top: 50%;  }

.nav-button span:last-child { top: 75%; }


.nav-button.active span {
    top: 50%;
    width: 100%;

}
      
.nav-button.active span:first-child {
    opacity: 0;
    transform: translateY(-50%);
    transition-delay: 0;
}

.nav-button.active span:nth-child(2n) {
    transform: rotate(-45deg);
}

.nav-button.active span:nth-child(3n) {
    transform: rotate(45deg);
    opacity: 1;
}

.nav-button.active span:last-child {
    opacity: 0;
    transition-delay: 0;
}


