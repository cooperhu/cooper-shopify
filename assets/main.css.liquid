    left: var(--padding-side-md);
  }
}

@media screen and (min-width: 1000px) {
  .nav-button {
    display: none;
  }
}

.nav-button span {
  position: absolute;
  left: 0;
  width: 100%;
  height: 1px;

  background: #000;
  opacity: 1;

  transform: scale(0.8), translateY(-50%);
  transform-origin: center center;

  transition: top 250ms ease-out, opacity 150ms ease, transform 250ms ease-out, background 250ms ease-out;
}

.nav-button span:first-child {
  top: 25%;
}

.nav-button span:nth-child(3n) {
  opacity: 0;
}

.nav-button span:nth-child(2n),
.nav-button span:nth-child(3n) {
  top: 50%;
}

.nav-button span:last-child {
  top: 75%;
}


.nav-button.active span {
  top: 50%;
  width: 100%;

}

.nav-button.active span:first-child {
  opacity: 0;
  transform: translateY(-50%);
  transition-delay: 0;
}

.nav-button.active span:nth-child(2n) {
  transform: rotate(-45deg);
}

.nav-button.active span:nth-child(3n) {
  transform: rotate(45deg);
  opacity: 1;
}

.nav-button.active span:last-child {
  opacity: 0;
  transition-delay: 0;
}

