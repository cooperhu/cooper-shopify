/* Variant Selectors */
.option-item {
    position: relative;

    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
}

/* Focus variant selectors so site can be fullt navigated with focus */
.option-item:focus-visible .checkbox {
  outline: 5px auto Highlight;
  outline: 5px auto -webkit-focus-ring-color;
}

.option-item input {
    position: absolute;
    opacity: 0;
    cursor: pointer;
    height: 0;
    width: 0;
}

.option-item .checkbox {
    display: inline-block;
    min-width: 30px;
    min-height: 28px;
    line-height: 28px;
    padding: 0 0.35rem;
    border: 1px solid var(--site-text);
    text-align: center;
    vertical-align: middle;

    cursor: pointer;

    font-size: 0.76563rem;

    transition: all 250ms ease;
}

.option-item .checkbox:hover {
    color: var(--site-bg);
    background-color: var(--site-text);
    opacity: 0.9;
}

.option-item input:checked ~ .checkbox {
    color: var(--site-bg);
    background-color: var(--site-text);
}
/* Quality Selectors */
.quantity__input {
    min-width: 30px;
    max-width: 50px;
    min-height: 30px;

    -moz-appearance: none;
    appearance: none;

    display: inline-block;

    border-radius: 0;
    border: 1px solid var(--border-color);

    text-align: center;

    vertical-align: middle;

    font-size: 0.725rem;
}

.quantity__input:focus {
    border-radius: 0;
}

.quantity__input::-webkit-outer-spin-button,
.quantity__input::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
}

.quantity__btn {
    appearance: none;

    display: inline-block;
    min-width: 30px;
    min-height: 28px;
    line-height: 28px;
    padding: 0 0.35rem;
    border: 1px solid var(--border-color);
    text-align: center;
    vertical-align: middle;

    color: var(--site-text);

    background: var(--site-bg);

    transition: all 250ms ease;

    cursor: pointer;
    touch-action: manipulation; /* removes double tap zoom */
}
.quantity__input:disabled,
.quantity__btn:disabled {
    opacity: 0.7;
    background: rgba(239, 239, 239, 1);
    border: 1px solid rgba(229, 229, 229, 1);
    transition: none;
}

.quantity__btn:hover {
    color: var(--site-bg);
    background: var(--border-color);
}

.quantity__btn:disabled:hover {
    color: var(--site-text);
    border: 1px solid rgba(229, 229, 229, 1);
    background: rgba(239, 239, 239, 1);
    transition-property: none;
}

