

<div class="contact-page">
    {{ page.content }}

    {% form 'contact' %}
      {{ form.errors | default_errors }}
      <div class="contact-form-group">
        <div class="contact-form-item">
          <div>
            <input placeholder="Name*" type="text" name="contact[name]" id="name" required/>
          </div>
        </div>

        <div class="contact-form-item">
          <div>
            <input placeholder="Email*" type="email" name="contact[email]" id="email" required/>
          </div>
        </div>
      </div>

      <div class="contact-form-item">
        <div>
          <textarea  placeholder="Custom Inquiry*" name="contact[body]" id="message" required></textarea>
        </div>
      </div>

      <div class="submit">
        <input class="btn black" type="submit" value="Submit" />
      </div>
    {% endform %}
</div>
