{% form 'cart', cart %}
    <h1>Cart</h1>

    {% if cart.empty? %}
        <h4>Your Cart is empty</h4>
    {% else %}
        <div class="cart-wrapper">
            {% for item in cart.items %}
                <div class="cart-item">
                    <div class="cart-item__img">
                        <a href="{{ item.url }}">
                            <img src="{{ item.image | image_url: width: 200}}"/>
                        </a>
                    </div>
                    <div class="cart-item__content">
                        <h2 class="cart-title"><a href="{{ item.url }}">{{ item.title }}</a></h2>
                        <p class="cart-price">{{ item.final_line_price | money }}</p>
                        <!--
                        <input name="updates[]" value="{{ item.quantity }}"/>
                        -->

                        {% comment %} Quantity {% endcomment %}
                        <div class="sp-option">
                          <button class="quantity__btn js-sub" type="button">-</button>
                          <input  class="quantity__input" id="quantity" name="updates[]" value="{{ item.quantity }}" min="1" max="100" />
                          <button class="quantity__btn js-add" type="button">+</button>
                        </div>

                        <a href="{{ item.url_to_remove }}">Remove from Cart</a>
                    </div>
                </div>
            {% endfor %}

            <hr/>

            <p>Total: {{ cart.total_price | money }}</p>
            
            <button type="submit" name="update">Update Cart</button> 
            <button type="submit" name="checkout">Checkout</button>
        </div>
    {% endif %}
{% endform %}