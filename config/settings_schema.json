[
    {
        "name": "Site Identity",
        "settings": [
          {
            "type": "image_picker",
            "id": "logo",
            "label": "Logo"
          },
          {
            "type": "image_picker",
            "id": "favicon",
            "label": "Favicon image",
            "info": "Will be scaled down to 32 x 32px"
          },
          {
            "type": "image_picker",
            "id": "loading_icon",
            "label": "Loading icon",
            "info": "The icon/image shown between page transitions"
          },
          {
            "type": "color",
            "id": "site_bg_color",
            "label": "Background Color",
            "default": "#ffffff"
          },
          {
            "type": "color",
            "id": "site_text_color",
            "label": "Text Color",
            "default": "#191919"
          }
        ]
    },
    {
        "name": "Site Banner",
        "settings": [
          {
            "type": "checkbox",
            "id": "show_banner",
            "label": "Show Sitewide Banner",
            "default": false
          },
          {
            "type": "inline_richtext",
            "id": "banner_text",
            "default": "This is the sitewide banner",
            "label": "Inline rich text"
          },
          {
            "type": "color",
            "id": "banner_bg_color",
            "label": "Banner Background Color",
            "default": "#191919"
          },
          {
            "type": "color",
            "id": "banner_text_color",
            "label": "Banner Text Color",
            "default": "#ffffff"
          }
        ]
    },
    {
        "name": "Site Settings",
        "settings": [
            {
              "type": "select",
              "id": "header_behavior",
              "label": "Header Behavior",
              "options": [
                {
                  "value": "static",
                  "label": "Static"
                },
                {
                  "value": "sticky",
                  "label": "Sticky"
                }
              ],
              "default": "sticky"
            },
            {
                "type": "checkbox",
                "id": "show_search",
                "label": "Header: Show Search Form",
                "default": true
            },
            {
                "type": "checkbox",
                "id": "show_buy_now",
                "label": "Product: Show Buy Now Buttons",
                "default": true
            },
            {
                "type": "checkbox",
                "id": "enable_order_notes",
                "label": "Cart: Enable Order Notes",
                "default": true
            }
        ]
    }
]